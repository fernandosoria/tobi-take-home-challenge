<h1>New Fulfillment Center</h1>

<%= form_for :fulfillment_center, :url => { :action => :create }, :method => :post, :html => {:class => 'form'} do |f| %>
  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <label for="<%= :name %>">Name</label><br>
        <%= f.text_field :name, :placeholder => "Warehouse name", :class => "form-control input-lg" %>
      </div>

      <div class="form-group">
        <label for="<%= :address %>">Address</label><br>
        <%= f.text_field :address, :placeholder => "Address", :class => "form-control input-lg" %>
      </div>

      <div class="form-group">
        <label for="<%= :city %>">City</label><br>
        <%= f.text_field :city, :placeholder => "City", :class => "form-control input-lg" %>
      </div>

      <div class="form-group">
        <div class="row">
          <div class="col-md-8">
            <label for="<%= :state %>">State</label><br>
            <%= f.text_field :state, :placeholder => "State", :class => "form-control input-lg" %>
          </div>
          <div class="col-md-4">
            <label for="<%= :zip %>">Zip</label><br>
            <%= f.text_field :zip, :placeholder => "Zip", :class => "form-control input-lg" %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <label for="<%= :phone %>">Phone</label><br>
        <%= f.text_field :phone, :placeholder => "9876543210", :class => "form-control input-lg" %>
      </div>

    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
          <%= f.submit "Submit", :type => "submit", :class => "btn btn-default" %>
      </div>
    </div>
  </div>

  
<% end %>