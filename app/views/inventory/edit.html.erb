<h1>Edit Inventory</h1>

  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <p>Update Fulfillment Center for inventory #<%= @inventory.id %></p>
      </div>
    </div>
  </div>

<%= form_for :inventory, :url => { :action => :update }, :method => :put, :html => {:class => 'form'} do |f| %>
  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <label for="<%= :fulfillment_center_id %>">Fulfillment Center</label><br>
        <%= f.select :fulfillment_center_id, FulfillmentCenter.all.collect { |fc| [ fc.name, fc.id ] }, :html => {:class => 'form-control'} %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
          <%= f.submit "Submit", :type => "submit", :class => "btn btn-default" %>
      </div>
    </div>
  </div>

  
<% end %>